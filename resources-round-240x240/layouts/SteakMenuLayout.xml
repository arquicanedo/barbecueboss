<layout id="SteakMenuLayout">
	<drawable id="steakList" class="ListDrawable">
		<param name="titleX">"center"</param>
		<param name="titleY">"top"</param>
		<param name="itemOriginX">40</param>
		<param name="itemOriginY">30</param>
		<param name="flipOriginX">160</param>
		<param name="targetOriginX">90</param>
		<param name="selectorOriginX">30</param>
		<param name="listItemOffsetY">25</param>
		<param name="listJustification">Graphics.TEXT_JUSTIFY_LEFT</param>
		<param name="font">Graphics.FONT_TINY</param>
		<param name="itemColor">Graphics.COLOR_WHITE</param>
		<param name="selectorColor">Graphics.COLOR_ORANGE</param>
		<param name="iconOffsetY">3</param>
		<param name="iconSize">SteakListItem.MEDIUM</param>
	</drawable>
	<bitmap id="logo" filename="../../resources/images/launcher_icon.png" y="200" x="center"/>
	<label id="timerIcon" x="250" y="67" font="@Fonts.FONT_GLYPH1_SMALL" text="@Strings.glyph_1_gear"/>
	<label id="upIcon" x="5" y="center" font="@Fonts.FONT_GLYPH2_SMALL" text="@Strings.glyph_2_up"/>
	<label id="downIcon" x="18" y="170" font="@Fonts.FONT_GLYPH2_SMALL" text="@Strings.glyph_2_down"/>
</layout>
